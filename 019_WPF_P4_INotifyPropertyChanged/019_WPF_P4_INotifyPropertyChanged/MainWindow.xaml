<Window x:Class="_019_WPF_P4_INotifyPropertyChanged.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_019_WPF_P4_INotifyPropertyChanged"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel>
        <Label Content="First Name"></Label>
        <TextBox Width="100" Height="30" HorizontalAlignment="Left" Text="{Binding Path=FirstName, Mode=TwoWay}"></TextBox>
        <Label Content="Last Name"></Label>
        <TextBox Width="100" Height="30" HorizontalAlignment="Left" Text="{Binding Path=LastName, Mode=TwoWay}"></TextBox>
        <Label Content="Full Name"></Label>
        <TextBox Width="100" Height="30" HorizontalAlignment="Left" Text="{Binding Path=FullName, Mode=TwoWay}"></TextBox>
    </StackPanel>
    
    
</Window>
